@model IEnumerable<UserDisplayVM>
@{
    ViewBag.Title = "Index";
}

<div class="panel">
    <div class="panel-body">
        <div class="underline-Heading">
            <h2>User Management</h2>
        </div>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Facility</th>
                <th class="text-center">Actions</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">No User Accounts</td>
                </tr>
            }
            else
            {
                foreach (UserDisplayVM user in Model)
                {
                    <tr>
                        <td style="vertical-align:middle">@user.FirstName @user.LastName</td>
                        <td style="vertical-align:middle">@user.Email</td>
                        <td style="vertical-align:middle">@user.FacilityName</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.UserID">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.UserID">Delete</a>
                        </td>
                    </tr>
                }
            }
        </table>
        <div class="row">
            <div class="col-md-6">
                <a asp-action="AdminPanel" asp-controller="Admin" class="btn btn-info pull-left">Return to Admin Panel</a>
            </div>
            <div class="col-md-6">
                <a asp-action="Create" class="btn btn-success pull-right">Create New User</a>
            </div>
        </div>
    </div>
</div>